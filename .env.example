# Directory to monitor for symlinks (comma-separated for multiple directories)
SYMLINK_DIR=/mnt/plex,/mnt/symlinks

# Directory containing target files (comma-separated for multiple directories)
TORRENTS_DIR=/mnt/remote/realdebrid/__all__

# Deletion behavior: 'files' to delete the referenced file, 'folders' to delete the parent folder
DELETE_BEHAVIOR=files

# Background scan interval in minutes (0 to disable)
SCAN_INTERVAL=720

# Grace period for pending deletions (in seconds)
PENDING_DELETION_GRACE_SECONDS=60

# Enable dry run mode (true/false)
DRY_RUN=false

# Run background scan on startup (true/false)
RUN_ON_STARTUP=true